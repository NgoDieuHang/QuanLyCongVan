@model QuanLyCongVan.Areas.Admin.Models.DocumentManagement.Schema.DocumentMaster
@{
    DocumentMaster documentMaster = Model == null ? new DocumentMaster() : Model;
    bool isInsert = documentMaster.Mode == (int)QLCV.Common.Enum.ConstantsEnum.ModeMaster.Insert;

    ViewBag.Title = isInsert ? "Create Document" : "Edit Document";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}
@using QuanLyCongVan.Areas.Admin.Models.DocumentManagement.Schema;
@using QLCV.Common;
@*@section css{
        @Styles.Render("~/public/css/admin/photoMaster")
    }*@
@section scripts{
    <script>
        var url = {
            editDocument: '@Url.RouteUrl("EditDocument")',
            createDocument: '@Url.RouteUrl("CreateDocument")',
            deleteDocument: '@Url.RouteUrl("DeletePhotos")'
        }
        var isInsert = '@(isInsert ? "I" : "U")';
    </script>
    @Scripts.Render("~/Scripts/Admin/Document/DocumentMaster")
}
<div class="page-title">
    <div class="title_left">
        <h3>@(isInsert ? "Create Document" : "Edit Document")</h3>
    </div>
</div>
<div class="clearfix"></div>
<div class="row">
    <div class="col-xs-12">
        <div class="x_panel">
            <div class="x_title">
                @if (isInsert)
                {
                    <h2>Thêm loại văn bản</h2>
                }

                <div class="clearfix"></div>
            </div>
            <div class="x_content">
                <form class="form-horizontal input_mask" id="form-document-main"  action="@Url.RouteUrl("SaveDocument")" accept-charset="UTF-8" method="post">
                    @if (!isInsert)
                    {
                        <input type="hidden" id="IdDocument" name="Id" value="@documentMaster.Document.Id" />
                    }
                    <div class="form-group">
                        <label for="tenLoaiVanBan">Tên loại văn bản <span class="text-required">*</span></label>
                        <input class="form-control required " maxlength="255" tabindex="1" name="tenLoaiVanBan" id="tenLoaiVanBan" placeholder="Tên lại văn bản " value="@(isInsert ? "" : documentMaster.Document.tenLoaiVanBan)">
                    </div>

                    <div class="form-group">
                        <label for="kyHieu">Tên loại văn bản <span class="text-required">*</span></label>
                        <input class="form-control required " maxlength="10" tabindex="2" name="kyHieu" id="kyHieu" placeholder="Ký hiệu " value="@(isInsert ? "" : documentMaster.Document.kyHieu)">
                    </div>

                    <div class="form-group">

                        <button type="button" class="btn btn-primary" id="btn-save" tabindex="3">Lưu</button>
                        <button type="button" class="btn btn-danger" id="btn-delete" tabindex="4">Xóa</button>

                    </div>
                </form>
            </div>
        </div>
    </div>
    
</div>


